<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp">


    <ProgressBar

        android:id="@+id/cProgres_chance_item"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerInParent="true"
        android:indeterminate="false"
        android:max="100"
        android:progress="50"
        android:progressDrawable="@drawable/progress_circular_draw"
        android:secondaryProgress="100"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/text_chance_study_item"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/text_chance_study_item"
        style="@style/MyButtonActive"
        android:layout_width="300dp"
        android:text="ادبیات سال دوم"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/text_nemberSelect_chance_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="3"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/cProgres_chance_item"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="@+id/cProgres_chance_item"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_endSelect_chakce_item"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:src="@drawable/ok_icon"
        app:layout_constraintBottom_toBottomOf="@+id/text_chance_study_item"
        app:layout_constraintEnd_toEndOf="@+id/cProgres_chance_item"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="@+id/cProgres_chance_item"
        app:layout_constraintTop_toTopOf="@+id/text_chance_study_item" />


</android.support.constraint.ConstraintLayout>