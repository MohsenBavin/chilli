<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/beige_color_background"
    tools:context=".starterActivities.SignUpTelephone">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:src="@drawable/beige_color_background"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraint_SignUpTelephone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/constraintLayout18"
                android:layout_width="match_parent"
                android:layout_height="351dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/sign_up_background_shape"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.3">

            </android.support.constraint.ConstraintLayout>

            <Button
                android:id="@+id/buttonNextforphone"
                style="@style/MyButtonInactiveSignUp"
                android:layout_width="0dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="20dp"
                android:gravity="center"
                android:text="بعدی"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/constraintLayout18"
                app:layout_constraintEnd_toEndOf="@+id/constraintLayout18"
                app:layout_constraintStart_toStartOf="@+id/constraintLayout18"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout18" />


            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text=" شماره موبایل "
                android:textColor="@color/colorDarkText"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/constraintLayout18"
                app:layout_constraintEnd_toEndOf="@+id/constraintLayout18"
                app:layout_constraintStart_toStartOf="@+id/constraintLayout18"
                app:layout_constraintTop_toTopOf="@+id/constraintLayout18"
                app:layout_constraintVertical_bias="0.25" />

            <EditText
                android:id="@+id/edt_get_telephone"
                style="@style/MyEditText"
                android:layout_width="0dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:maxLength="11"
                android:ems="10"
                android:inputType="phone"
                app:layout_constraintBottom_toTopOf="@+id/buttonNextforphone"
                app:layout_constraintEnd_toEndOf="@+id/buttonNextforphone"
                app:layout_constraintStart_toStartOf="@+id/buttonNextforphone"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                app:layout_constraintVertical_bias="0.0" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/icon_phone"
                app:layout_constraintBottom_toBottomOf="@+id/edt_get_telephone"
                app:layout_constraintEnd_toEndOf="@+id/edt_get_telephone"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/edt_get_telephone"
                app:layout_constraintTop_toTopOf="@+id/edt_get_telephone" />

        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>