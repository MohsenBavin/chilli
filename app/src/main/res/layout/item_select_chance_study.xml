<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="115dp"
    android:layout_height="160dp"
    android:layout_marginEnd="2dp"
    android:layout_marginStart="2dp"
    android:id="@+id/constrain_lesson_data">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/dialog_blue_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/txt_lesson_title"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/dialog_blue_tittle_shape"
            android:paddingEnd="10dp"
            android:text="زیست شناسی"
            android:textColor="@color/colorWhite"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/text_chance_study_item"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="#00B0FF"
            android:text="زیست شناسی 1"
            android:textColor="#000000"
            android:textSize="11sp"
            android:gravity="center"
            android:layout_marginEnd="2dp"
            android:layout_marginStart="2dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_lesson_title" />

        <TextView
            android:id="@+id/txt_lesson_topic"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#40C4FF"
            android:gravity="center"
            android:text=" 30 الماس هدیه به حساب شما اضافه شد"
            android:textColor="#000000"
            android:textSize="12sp"
            android:layout_marginEnd="2dp"
            android:layout_marginStart="2dp"
            app:layout_constraintBottom_toTopOf="@+id/txt_lessone_page"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_book_title" />

        <TextView
            android:id="@+id/txt_lessone_page"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:gravity="center"
            android:text=" صفحه 10 تا 112"
            android:textColor="#000000"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_lesson_topic" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <android.support.constraint.ConstraintLayout
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">
            <ProgressBar

                android:id="@+id/cProgres_chance_item"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:indeterminate="false"
                android:max="100"
                android:progress="50"
                android:progressDrawable="@drawable/progress_circular_draw"
                android:secondaryProgress="100" />



            <ImageView
                android:id="@+id/img_endSelect_chakce_item"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ok_icon"
                app:layout_constraintBottom_toBottomOf="@+id/cProgres_chance_item"
                app:layout_constraintEnd_toEndOf="@+id/cProgres_chance_item"
                app:layout_constraintStart_toStartOf="@+id/cProgres_chance_item"
                app:layout_constraintTop_toTopOf="@+id/cProgres_chance_item" />


            <TextView
                android:id="@+id/text_nemberSelect_chance_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="3"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/cProgres_chance_item"
                app:layout_constraintEnd_toEndOf="@+id/cProgres_chance_item"
                app:layout_constraintStart_toStartOf="@+id/cProgres_chance_item"
                app:layout_constraintTop_toTopOf="@+id/cProgres_chance_item"/>

        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>